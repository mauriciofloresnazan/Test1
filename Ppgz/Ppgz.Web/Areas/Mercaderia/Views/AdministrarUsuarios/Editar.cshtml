@model Ppgz.Web.Areas.UsuarioProveedorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Usuario</h2>
<p class="page-description-title">
    <i class="fa fa-info" aria-hidden="true"></i> <i>Nuevo usuario</i>
</p>
<div class="panel panel-default">
    <div class="panel-heading">Formulario de registro</div>
    <div class="panel-body">

        @using (Html.BeginForm("Editar", "AdministrarUsuarios", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(m => m.Perfil, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.Perfil, (IEnumerable<SelectListItem>)ViewBag.Perfiles, "Seleccione un Valor", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Perfil)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Nombre, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Apellido, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Apellido)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new {@class = "col-sm-3 control-label"})
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Telefono, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefono)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmarPassword, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-7">
                    @Html.PasswordFor(m => m.ConfirmarPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmarPassword)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-7">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-user-plus" aria-hidden="true"></i> Registrar</button>
                    <a class="btn btn-default" href="@Url.Action("Index", "AdministrarUsuarios")"><i class="fa fa-undo" aria-hidden="true"></i> Cancelar</a>
                </div>
            </div>

        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
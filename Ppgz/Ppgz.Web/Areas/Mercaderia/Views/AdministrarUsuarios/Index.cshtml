@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administrar Usuarios</h2>
<p class="page-description-title">
    <i class="fa fa-users" aria-hidden="true"></i> <i>Registro de Usuarios.</i>
</p>

<div class="panel panel-default">
    <div class="panel-heading">Lista de Usuarios</div>
    <div class="panel-body">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-condensed table-bordered" id="usuarios">
                    <thead>
                        <tr>
                            <th class="text-center">Login</th>
                            <th class="text-center">Nombre del Responsable</th>
                            <th class="text-center">Correo del Responsable</th>
                            <th class="text-center" width="170px">
                                <a href="@Url.Action("Crear", "AdministrarUsuarios")" class="btn btn-primary btn-xs">
                                    <i class="fa fa-plus" aria-hidden="true"></i> Crear
                                </a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in (ViewBag.Usuarios))
                        {
                            <tr>
                                <td class="text-center vert-align">@(usuario.UserName)</td>
                                <td class="text-center vert-align">@(usuario.Nombre + " " + usuario.Apellido)</td>
                                <td class="text-center vert-align">@(usuario.Email)</td>
                                <td class="text-center vert-align">

                                    <div class="btn-group hidden-xs">
                                        <a class="btn btn-warning btn-xs" href="@Url.Action("Editar", "AdministrarUsuarios", new { @id = @usuario.Id })">
                                            <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                        </a>
                                        <a class="btn btn-danger btn-xs" href="@Url.Action("Eliminar", "AdministrarUsuarios", new { @id = @usuario.Id })" data-toggle="confirmation" data-btn-ok-label="Si" data-title="¿Está seguro?" data-content="El usuario será eliminado.">
                                            <i class="fa fa-times" aria-hidden="true"></i> Eliminar
                                        </a>
                                    </div>
                                    <div class="btn-group-vertical visible-xs">
                                        <a class="btn btn-warning btn-xs" href="@Url.Action("Editar", "AdministrarUsuarios", new { @id = @usuario.Id })">
                                            <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                        </a>
                                        <a class="btn btn-danger btn-xs" href="@Url.Action("Eliminar", "AdministrarUsuarios", new { @id = @usuario.Id })" data-toggle="confirmation" data-btn-ok-label="Si" data-title="¿Está seguro?" data-content="El usuario será eliminado.">
                                            <i class="fa fa-times" aria-hidden="true"></i> Eliminar
                                        </a>
                                    </div>
                                    <div class="btn-group " role="group" aria-label="...">
                                    </div>
</tr>

                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">


        $(document).ready(function () {
            $('#usuarios').DataTable({
                "language": {
                    "url": "@Url.Content("~/assets/vendor/dataTables-1.10.13/Spanish.json")"
                },
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
            });
        });


    </script>
}